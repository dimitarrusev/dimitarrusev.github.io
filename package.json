{
  "name": "dimitarrusev.github.io",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "npm run process && ng serve",
    "serve": "npm run start & npm run build:dev && node scripts/serve.js",
    "build:dev": "npm run generate:build-directory && npm run build:browser:dev && npm run build:server:dev && npm run generate:directory-structure && npm run prerender && npm run generate:feed && npm run generate:sitemap && npm run generate:robots && npm run copy",
    "build:prod": "npm run generate:build-directory && npm run build:browser:prod && npm run build:server:prod && npm run generate:directory-structure && npm run prerender && npm run generate:feed && npm run generate:sitemap && npm run generate:robots && npm run copy",
    "build:browser:dev": "ng build --app browser --dev --extract-css",
    "build:browser:prod": "ng build --app browser --prod --extract-css --deploy-url https://dimitarrusev.com/",
    "build:server:dev": "ng build --aot --app server --dev --extract-css",
    "build:server:prod": "ng build --aot --app server --prod --extract-css --output-hashing=none --deploy-url https://dimitarrusev.com/",
    "deploy": "ngh --repo https://GH_TOKEN@github.com/dimitarrusev/dimitarrusev.github.io.git --branch master --message \"auto-generated message\"",
    "clean": "node scripts/clean.js",
    "clean:process": "node scripts/clean.js process",
    "clean:feed": "node scripts/clean.js feed",
    "clean:sitemap": "node scripts/clean.js sitemap",
    "clean:robots": "node scripts/clean.js robots",
    "preprocess": "npm run clean:process",
    "process": "node scripts/process.js pages && node scripts/process.js articles",
    "pregenerate:build-directory": "npm run clean",
    "generate:build-directory": "node scripts/generate.js build-directory",
    "generate:directory-structure": "node scripts/generate.js directory-structure",
    "pregenerate:feed": "npm run clean:feed",
    "generate:feed": "node scripts/generate.js feed",
    "pregenerate:sitemap": "npm run clean:sitemap",
    "generate:sitemap": "node scripts/generate.js sitemap",
    "pregenerate:robots": "npm run clean:robots",
    "generate:robots": "node scripts/generate.js robots",
    "prerender": "node scripts/prerender.js",
    "copy": "node scripts/copy.js",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.3",
    "@angular/common": "^5.2.3",
    "@angular/compiler": "^5.2.3",
    "@angular/core": "^5.2.3",
    "@angular/forms": "^5.2.3",
    "@angular/http": "^5.2.3",
    "@angular/platform-browser": "^5.2.3",
    "@angular/platform-browser-dynamic": "^5.2.3",
    "@angular/router": "^5.2.3",
    "@nguniversal/module-map-ngfactory-loader": "^1.0.0-beta.3",
    "@types/iframe-resizer": "^3.5.2",
    "core-js": "^2.4.1",
    "iframe-resizer": "^3.5.14",
    "rxjs": "5.5.6",
    "serialize-javascript": "^1.4.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.7.3",
    "@angular/compiler-cli": "^5.2.3",
    "@angular/language-service": "^5.2.3",
    "@angular/platform-server": "^5.2.3",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~10.9.3",
    "angular-cli-ghpages": "^0.5.1",
    "codelyzer": "~4.1.0",
    "generate-robotstxt": "^5.0.4",
    "http-server": "^0.11.1",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^1.0.0",
    "marked": "^0.3.6",
    "prismjs": "^1.7.0",
    "protractor": "~5.3.0",
    "reflect-metadata": "^0.1.10",
    "rss": "^1.2.2",
    "shelljs": "^0.8.1",
    "sitemap": "^1.13.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "2.7.2",
    "yaml-front-matter": "^3.4.0"
  }
}
