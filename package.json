{
  "name": "dimitarrusev.github.io",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "npm run process && ng serve",
    "prebuild": "npm run clean && node scripts/generate.js buildDir",
    "build:dev": "npm run build:browser:dev && npm run build:server:dev && npm run generate && npm run prerender && npm run copy",
    "build:prod": "npm run build:browser:prod && npm run build:server:prod && npm run generate && npm run prerender && npm run copy",
    "build:browser:dev": "ng build --app browser --dev",
    "build:browser:prod": "ng build --app browser --prod --deploy-url https://dimitarrusev.com",
    "build:server:dev": "ng build --aot --app server --dev",
    "build:server:prod": "ng build --aot --app server --prod --output-hashing=none --deploy-url https://dimitarrusev.com",
    "deploy": "ngh --repo https://GH_TOKEN@github.com/dimitarrusev/dimitarrusev.github.io.git --branch master --message \"auto-generated message\"",
    "clean": "node scripts/clean.js",
    "preprocess": "node scripts/clean.js processOutput",
    "process": "node scripts/process.js pages && node scripts/process.js articles",
    "generate": "node scripts/generate.js",
    "prerender": "node scripts/prerender.js",
    "copy": "node scripts/copy.js",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.4.3",
    "@angular/common": "^4.4.3",
    "@angular/compiler": "^4.4.3",
    "@angular/core": "^4.4.3",
    "@angular/forms": "^4.4.3",
    "@angular/http": "^4.4.3",
    "@angular/platform-browser": "^4.4.3",
    "@angular/platform-browser-dynamic": "^4.4.3",
    "@angular/router": "^4.4.3",
    "core-js": "^2.4.1",
    "rxjs": "^5.4.2",
    "serialize-javascript": "^1.4.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.4.5",
    "@angular/compiler-cli": "^4.4.3",
    "@angular/language-service": "^4.4.3",
    "@angular/platform-server": "^4.4.3",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "angular-cli-ghpages": "^0.5.1",
    "codelyzer": "~3.1.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "markdown-to-json": "^0.5.1",
    "marked": "^0.3.6",
    "prismjs": "^1.7.0",
    "protractor": "~5.1.2",
    "reflect-metadata": "^0.1.10",
    "shelljs": "^0.7.8",
    "ts-node": "~3.2.0",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3",
    "yaml-front-matter": "^3.4.0"
  }
}
